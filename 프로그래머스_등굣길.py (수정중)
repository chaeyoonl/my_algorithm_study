def solution(m, n, puddles):
    answer = 0
    dpTable = [[1]*(m+1) for _ in range(n+1)]
    
    for i in range(1, m+1):
        for j in range(1, n+1):
            if [j, i] in puddles:
                dpTable[j][i] = 0
    

    for x in range(2, m+1):
        for y in range(2, n+1):
            if dpTable[y][x] != 0:
                if y == 2:
                    dpTable[y][x] = dpTable[y][x-1] + 1
                elif x == 2:
                    dpTable[y][x] = dpTable[y-1][x] + 1
                else:
                    dpTable[y][x] = dpTable[y][x-1]+dpTable[y-1][x]

    
    
    
    print(dpTable)
    answer = dpTable[-1][-1] % 1000000007
    
    return answer
